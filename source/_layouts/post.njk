---
layout: base

---

<h1>{{ title }}</h1>

<p>
  <time datetime="{{ page.date | htmlDateString }}">
  {{- page.date | readableDate -}}</time>
</p>
<ul class="post-metadata">
  {%- for tag in tags | filterTagList -%}
  {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
  <li><a href="{{ tagUrl }}" class="post-tag">{{ tag }}</a>
  {%- if not loop.last %}, {% endif %}</li>
  {% endfor %}
</ul>

{{ content | safe }}

{% if collections.essays %}
{%- set previousPost = collections.essays | getPreviousCollectionItem %}
{%- set nextPost     = collections.essays | getNextCollectionItem %}
{% if nextPost or previousPost %}
<ul class="links-nextprev">
  {%- if previousPost %}
  <li>Previous: <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a></li>
  {% endif %}
  {%- if nextPost %}
  <li>Next: <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a></li>
  {% endif %}
</ul>
{% endif %}
{% endif %}
