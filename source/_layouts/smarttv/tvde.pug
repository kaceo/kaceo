    title YouTV

    link(rel="stylesheet" href="/kaceo/assets/tv/tvde.css")
    style.
      html {
          margin: 0;
          padding: 0;
          height: 100%;
          width: 100%;
          background-color: #00a09a;
          background-position: center;
          background-repeat: no-repeat;
          /* a white YOUTV */
          background-image: url("data:image/svg+xml;base64,");
          /* */
      }
    script(src="/kaceo/assets/tv/tvdevendor.js")
    script(src="/kaceo/assets/tv/tvde.js")
