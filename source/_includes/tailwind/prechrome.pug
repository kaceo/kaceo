  header#header(class="bg-white w-full px-6 py-5 z-50 fixed top-0 shadow-md transition-all transform ease-in-out duration-500")
  div(class=[
    "max-w-6xl",
    "mx-auto",
    "flex items-center flex-wrap justify-between",
    ])
    div(class="sm:mr-8")
      a(class="flex items-center"
        href='/'
      )
        span(class=[
          "text-xl text-teal-700 font-semibold self-center",
        ])= meta.brandname
      nav#menu(class=[
        "w-full md:w-auto",
        "mt-2 md:mt-0",
        "items-center flex-grow md:flex",
        "hidden order-last md:order-none",
      ])
        each item in menus.top_menus
          a(href=item.url
            class=[
              "block md:inline-block",
              "mr-4 mt-4 md:mt-0",
              "font-medium text-slate-700 hover:text-teal-600 text-base",
          ])= item.name
          | &nbsp;|&nbsp;
    //-
      form#search(
        action='/search'
        class="order-last sm:order-none flex-grow items-center justify-end hidden sm:block mt-6 sm:mt-0"
      )
        label(class="visually-hidden"
          for="header-searchbox"
        ) Search here ...
        input#header-searchbox(
          type="text" name="q"
          placeholder="Search here ..."
          class="w-full sm:max-w-xs bg-slate-200 border border-transparent float-right focus:bg-white focus:border-slate-300 focus:outline-none h-8 p-4 placeholder-slate-500 rounded text-slate-700 text-sm"
        )
    div#menu-toggle(class=[
      "flex items-center",
      "text-slate-700 hover:text-teal-600 cursor-pointer",
      "sm:ml-6",
      "md:hidden",
    ]) MENU
    //- include "icons/menu.svg"








div(class="container mx-auto")
  div(class="flex items-center justify-between py-6 lg:py-10")
    a(href="/" class="flex items-center")
      span(class="mr-2")
        img(src="/assets/atlaslogo.svg" alt="logo")
      p(class="hidden font-body text-2xl font-bold text-primary dark:text-white lg:block"
      ) John Doe

    div(class="flex items-center lg:hidden")
      i(class="bx mr-8 cursor-pointer text-3xl text-primary dark:text-white"
        @click="themeSwitch()"
        :class="isDarkMode ? 'bxs-sun' : 'bxs-moon'")
      span(@click="isMobileMenuOpen = true")
        img(src="/assets/atlasmenu.svg")

    div(class="lg:block")
      ul(class="flex items-center")
        each item in menus.top_menus
          li(class="group relative mr-6 mb-1")
            div(class="absolute left-0 bottom-0 z-20 h-0 w-full opacity-75 transition-all group-hover:h-2 group-hover:bg-yellow")
            a(href=item.url
              class="relative z-30 block px-2 font-body text-lg font-medium text-primary transition-colors group-hover:text-green dark:text-white dark:group-hover:text-secondary"
            )= item.name
        li
          i(class="bx cursor-pointer text-3xl text-primary dark:text-white"
            @click="themeSwitch()"
            :class="isDarkMode ? 'bxs-sun' : 'bxs-moon'")

