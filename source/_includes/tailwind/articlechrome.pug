article(class="max-w-5xl mx-auto")

  header(class="mb-14")
    h1(class="text-3xl text-center font-bold leading-normal text-slate-900 mt-0 mb-3"
    )= title

    div(class="text-center")
      |  Published on
      = filters.readableDate( page.date )

    if tags
      div(class="mt-3 text-center")
        each tag in tags
          a(class="inline-block bg-slate-200 rounded-full px-3 py-1 text-sm font-medium text-slate-700 m-0.5"
            href='/tags/' + tag)
            | #
            = tag

    if thumb
      div(class="mt-10 -mx-7 md:mx-0")
        img(class="w-full max-w-2xl mx-auto"
          src=thumb
          width="960" height="500"
          alt="This post thumbnail")

  hr
  #content(class="prose text-slate-800 max-w-none")
    = !{ content }

  hr
  if site.disqusShortname
    div(class="mt-10")
      if process.environment === "production"
        //-include "comments/mydisqus.njk"
      else
        div(class="italic text-slate-700")
          | Disqus comments not available
